{
  "name": "cvs-svc-test-results",
  "version": "1.0.0",
  "description": "",
  "main": "src/handler.js",
  "engines": {
    "node": "10.18.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "start": "BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "start:test": "npm run tslint && SLS_DEBUG=* BRANCH=local node_modules/gulp/bin/gulp.js start-serverless",
    "end:test": "node_modules/gulp/bin/gulp.js kill-serverless",
    "debug": "export SLS_DEBUG=* && BRANCH=local node --inspect ./node_modules/serverless/bin/serverless offline start",
    "build": "node_modules/typescript/bin/tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "BRANCH=local SLS_DEBUG=* AWS_XRAY_CONTEXT_MISSING=LOG_ERROR jest --testMatch=\"**/*.unitTest.ts\" --coverage",
    "test-i": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\" --runInBand",
    "dynamodb": "sls dynamodb start",
    "prepush": "BRANCH=local npm test && npm run tslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "tslint": "tslint src/**/*.ts tests/**/*.ts",
    "sonar-scanner": "npm run tslint && npm run test && sonar-scanner",
    "coverage": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.*Test.ts\" --coverage",
    "audit-dep": "npm audit --json | node_modules/.bin/audit-filter --nsp-config=.nsprc --audit=-",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME}/ && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip .",
    "tools-setup": "sls dynamodb migrate && BRANCH=local node_modules/gulp/bin/gulp.js start-serverless && sls dynamodb seed --seed=test-results"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/cvs-svc-test-results.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dvsa/cvs-svc-test-results/issues"
  },
  "homepage": "https://github.com/dvsa/cvs-svc-test-results#readme",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.21",
    "@types/jest-plugin-context": "^2.9.2",
    "@types/joi": "^14.3.3",
    "@types/lambda-tester": "^3.5.1",
    "@types/lodash": "^4.14.144",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^12.12.0",
    "@types/request": "^2.48.1",
    "@types/sinon": "^7.0.13",
    "@types/supertest": "^2.0.8",
    "audit-filter": "^0.5.0",
    "aws-lambda-mock-context": "^3.2.1",
    "babel-jest": "^25.1.0",
    "gulp": "^4.0.2",
    "husky": "^3.0.9",
    "jest": "25.1.0",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "lambda-tester": "^4.0.1",
    "lodash": "^4.17.21",
    "serverless": "^1.73.1",
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-offline": "^5.12.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "sinon": "^7.3.2",
    "standard": "^14.3.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-jsdoc-rules": "^0.2.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "aws-sdk": "^2.645.0",
    "aws-xray-sdk": "^2.5.0",
    "joi": "^14.3.1",
    "moment": "^2.25.3",
    "moment-timezone": "^0.5.28",
    "lodash": "^4.17.21",
    "node-yaml": "^3.2.0",
    "path-parser": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.5"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "testURL": "http://localhost"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepush && npm run security-checks"
    }
  }
}
